<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_get_bluetooth_devices"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.led.led.ledControl">

    <com.skydoves.colorpickerview.ColorPickerView
        android:id="@+id/colorPickerView"
        android:layout_width="wrap_content"
        android:layout_height="603dp"
        android:layout_centerInParent="true"
        app:palette="@drawable/palette"
        app:selector="@drawable/wheel" />

    <Button
        android:id="@+id/Ugasi_Button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="173dp"
        android:layout_height="88dp"
        android:layout_alignBottom="@+id/colorPickerView"
        android:layout_toEndOf="@+id/colorPickerView"
        android:background="@android:color/holo_red_light"
        android:text="Turn Off"
        android:textSize="24sp" />

    <Button
        android:id="@+id/Upali_Button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="173dp"
        android:layout_height="88dp"
        android:layout_alignBottom="@+id/colorPickerView"
        android:layout_toStartOf="@+id/colorPickerView"
        android:background="@android:color/holo_blue_light"
        android:text="Turn On"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/rgbValues"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/colorPickerView"
        android:layout_toEndOf="@+id/colorPickerView"
        android:text="" />

</RelativeLayout>
